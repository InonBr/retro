<div class="box">


  <div class="box-to-flex">
    <div class="left-box">
      <%= image_tag(
      "https://static.makeuseof.com/wp-content/uploads/2016/09/old-technology-670x335.jpg",
      :alt => "#{@gadget.name} image", class: "image-show")
      %>
    </div>

    <div class="right-box">
      <h1><%= @gadget.name %></h1>
      <p><%= @gadget.description%></p>
      <p>Year: <%= @gadget.year %></p>
      <p>Condition: <%= @gadget.condition %></p>
      <p>Gategory: <%= @gadget.category %></p>
      <div class="price-order">
      <p>price: $<%= @gadget.price %> per day</p>
      <%= link_to "Book now!", "#", class: "nice-button" %>
      </div>
    </div>
  </div>
</div>

<div class="map">

</div>


